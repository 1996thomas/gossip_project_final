<h1>Editer le gossip</h1>

<%= form_for @gossip do |f| %>
  <div class="form-group">
    <label>Titre du gossip</label>
    <%=f.text_field :title%>
  </div>

  <div class="form-group">
    <label>Contenu du gossip<label>
    <%=f.text_field :content%>
  </div>

  <div class="form-group">
    <button type="submit" class="btn btn-sm btn-primary">Modifier</button>
    <a href="<%= gossips_path%>" class="btn btn-sm btn-outline-primary">Revenir aux gossips</a>
  </div>
<%end%>