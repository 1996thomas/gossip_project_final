  <div class="container my-5 d-flex flex-column justify-content-center align-items-center">
    <h1 class="my-3">Créer un compte</h1>
<%= form_with model:@user do |form| %>
  <div class="container my-5 d-flex flex-column justify-content-center align-items-center">

  <%= form.label :first_name, "Prénom:", class:"my-2" %>
  <%= form.text_field :first_name %>

  <%= form.label :last_name, "Nom :", class:"my-2" %>

  <%= form.text_field :last_name %>

  <%= form.label :description, "Description :", class:"my-2" %>
  <%= form.text_field :description %>

  <%= form.label :age, "Age :", class:"my-2" %>
  <%= form.text_field :age %>

  <%= form.label :age, "Ville :", class:"my-2" %>
  <%= form.select :city_id, @city.map{|c| c.id }%>

  <%= form.label :email, "E-mail", class:"my-2" %>
  <%= form.text_field :email %>

  <%= form.label :password, "Mot de passe :" , class:"my-2"%>
  <%= form.password_field :password %>
  
  <%= form.submit "Créer un compte", class:"my-4 btn btn-success" %>
</div>
<% end %>
</div>
</div>